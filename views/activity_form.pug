extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='description') Description:
      input#description.form-control(type='text', placeholder='Activity description' name='description' required='true' value=(undefined===activity ? '' : activity.description) )
    button.btn.btn-primary(type='submit') Submit
    
  if errors
    div.alert.alert-danger(style='margin-top: 20px;')
        for error in errors
          li!= error.msg
